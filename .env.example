# Variables de entorno para el Sistema de Metas de Reducción Codelco
# Copiar este archivo como .env y ajustar los valores según el entorno

# Configuración de API (para integración futura)
VITE_API_BASE_URL=https://api.codelco.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Autenticación (para producción)
VITE_AUTH_ENABLED=false
VITE_AUTH_PROVIDER=oauth2
VITE_AUTH_CLIENT_ID=codelco-metas-client

# Configuración de aplicación
VITE_APP_NAME="Sistema de Metas de Reducción"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Características opcionales
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_EXPORT_PDF=false

# Configuración de datos
VITE_DEFAULT_INDICATOR="tCO₂e/ton Cu"
VITE_MIN_BASELINE_YEAR=2015
VITE_MAX_FUTURE_YEARS=10

# URLs de servicios externos (para producción)
VITE_SCADA_SERVICE_URL=""
VITE_REPORTING_SERVICE_URL=""
VITE_NOTIFICATION_SERVICE_URL=""

# Configuración de caché (en minutos)
VITE_CACHE_DURATION_METAS=15
VITE_CACHE_DURATION_STATS=5
VITE_CACHE_DURATION_CATALOGS=60
